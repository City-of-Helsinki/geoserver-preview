                    img(src=staticPrefix("/images/hel-heart-dev.png"), title="Helsinki loves developers!", alt="Helsinki loves developers!")
                a(href="http://www.hri.fi" target="_blank")
                    img(src=staticPrefix("/images/hri.png"), title="Helsinki Region Infoshare", alt="Helsinki Region Infoshare")

